{
  "name": "@benredmond/apex",
  "version": "0.4.1",
  "description": "APEX - Autonomous Pattern-Enhanced eXecution. AI-powered development workflow with APEX Intelligence for pattern recognition and task execution",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ai",
    "development",
    "workflow",
    "claude",
    "automation",
    "patterns",
    "apex"
  ],
  "author": "Ben",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "apex": "./src/cli/apex.js"
  },
  "files": [
    "src/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "rm -rf dist && npm run type-check && tsc -p tsconfig.build.json",
    "prepublishOnly": "npm test && npm run lint && npm run type-check",
    "release:patch": "npm test && npm run lint && npm run type-check && npm version patch && npm publish",
    "release:minor": "npm test && npm run lint && npm run type-check && npm version minor && npm publish",
    "release:major": "npm test && npm run lint && npm run type-check && npm version major && npm publish",
    "pack:test": "npm pack --dry-run",
    "mcp:server": "node src/mcp/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.2.0",
    "minimatch": "^10.0.3",
    "nanoid": "^5.1.5",
    "ora": "^7.0.1",
    "pdf-parse": "^1.1.1",
    "semver": "^7.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benredmond/apex.git"
  },
  "bugs": {
    "url": "https://github.com/benredmond/apex/issues"
  },
  "homepage": "https://github.com/benredmond/apex#readme"
}
