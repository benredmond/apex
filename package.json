{
  "name": "@benredmond/apex",
  "version": "0.1.0",
  "description": "APEX - Autonomous Pattern-Enhanced eXecution. AI-powered development workflow with APEX Intelligence for pattern recognition and task execution",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ai",
    "development",
    "workflow",
    "claude",
    "automation",
    "patterns",
    "apex"
  ],
  "author": "Ben",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "apex": "src/cli/apex.js"
  },
  "files": [
    "src/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "node scripts/build.js",
    "prepublishOnly": "npm test && npm run lint",
    "release:patch": "npm test && npm run lint && npm version patch && npm publish",
    "release:minor": "npm test && npm run lint && npm version minor && npm publish",
    "release:major": "npm test && npm run lint && npm version major && npm publish",
    "pack:test": "npm pack --dry-run"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/apex.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/apex/issues"
  },
  "homepage": "https://github.com/yourusername/apex#readme"
}
