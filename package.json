{
  "name": "@benredmond/apex",
  "version": "0.5.4",
  "description": "APEX - Autonomous Pattern-Enhanced eXecution. AI-powered development workflow with APEX Intelligence for pattern recognition and task execution",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ai",
    "development",
    "workflow",
    "claude",
    "automation",
    "patterns",
    "apex"
  ],
  "author": "Ben",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "apex": "./src/cli/apex.js"
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:vitest": "vitest",
    "migrate:vitest": "node scripts/migrate-to-vitest.js",
    "migrate:vitest:dry": "node scripts/migrate-to-vitest.js --dry-run",
    "migrate:vitest:restore": "node scripts/migrate-to-vitest.js --restore",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:schema": "vitest run tests/schema-drift.test.ts",
    "test:compat": "vitest run tests/database-compatibility.test.ts",
    "validate:schema": "npx tsx scripts/validate-schema.ts",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "rm -rf dist && npm run type-check && tsc -p tsconfig.build.json",
    "prepublishOnly": "npm test && npm run lint && npm run type-check && npm run validate:schema",
    "release:patch": "npm test && npm run lint && npm run type-check && npm run validate:schema && npm version patch && npm publish",
    "release:minor": "npm test && npm run lint && npm run type-check && npm run validate:schema && npm version minor && npm publish",
    "release:major": "npm test && npm run lint && npm run type-check && npm run validate:schema && npm version major && npm publish",
    "pack:test": "npm pack --dry-run",
    "mcp:server": "node dist/mcp/index.js",
    "apex": "node src/cli/apex.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.2.0",
    "minimatch": "^10.0.3",
    "nanoid": "^5.1.5",
    "ora": "^7.0.1",
    "pdf-parse": "^1.1.1",
    "semver": "^7.7.2",
    "sql.js": "^1.10.3",
    "yaml": "^2.8.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@vitest/ui": "^3.2.4",
    "@yao-pkg/pkg": "^6.6.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "postject": "^1.0.0-alpha.6",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.1",
    "ts-morph": "^27.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benredmond/apex.git"
  },
  "bugs": {
    "url": "https://github.com/benredmond/apex/issues"
  },
  "homepage": "https://github.com/benredmond/apex#readme",
  "sea": {
    "main": "dist/apex-bundled.cjs",
    "output": "binaries",
    "targets": [
      "darwin-x64",
      "darwin-arm64",
      "linux-x64",
      "win32-x64"
    ],
    "useSnapshot": false,
    "useCodeCache": true
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.2.0"
  }
}
